<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabbed_activity$PlaceholderFragment"
    android:background="@color/blue">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue">

            <TextView
                android:id="@+id/section_label"
                android:layout_width="341dp"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="File Your Complaint Here"
                android:textAlignment="center"
                android:textColor="@color/mycolor"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/section_label"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="113dp"
                android:layout_marginLeft="113dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="87dp"
                android:layout_marginRight="87dp"
                android:text="Type of Complaint:"
                android:textColor="@color/mycolor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/message"
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_alignStart="@+id/section_label"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="42dp"
                android:layout_marginRight="42dp"
                android:ems="10"
                android:hint="Please be specific"
                android:inputType="textPersonName"
                android:textColor="@color/mycolor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_below="@+id/acidity"
                android:layout_alignStart="@+id/section_label"
                android:layout_marginStart="1dp"
                android:layout_marginTop="10dp"
                android:text="Additional details"
                android:textColor="@color/mycolor"
                android:textSize="18sp" />

            <Button
                android:id="@+id/complain_submit"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message"
                android:layout_alignStart="@+id/message"
                android:layout_alignLeft="@+id/message"
                android:layout_alignEnd="@+id/message"
                android:layout_alignRight="@+id/message"
                android:layout_marginStart="219dp"
                android:layout_marginLeft="219dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/buttonbg"
                android:text="Submit"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/complain_cencel"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message"
                android:layout_alignStart="@+id/message"
                android:layout_alignLeft="@+id/message"
                android:layout_alignEnd="@+id/message"
                android:layout_alignRight="@+id/message"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="217dp"
                android:layout_marginRight="217dp"
                android:background="@drawable/buttonbg"
                android:text="CANCEL"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="22sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/burst"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="203dp"
                android:layout_marginLeft="203dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="173dp"
                android:layout_marginRight="173dp"
                android:textColor="@color/mycolor"
                android:textSize="22sp" />

            <CheckBox
                android:id="@+id/shortage"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="203dp"
                android:layout_marginLeft="203dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="174dp"
                android:layout_marginRight="174dp"
                android:textColor="@color/mycolor"
                android:textSize="22sp" />

            <CheckBox
                android:id="@+id/leakage"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="203dp"
                android:layout_marginLeft="203dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="175dp"
                android:layout_marginRight="175dp"
                android:textColor="@color/mycolor"
                android:textSize="22sp" />

            <CheckBox
                android:id="@+id/acidity"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="204dp"
                android:layout_marginLeft="204dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="172dp"
                android:layout_marginRight="172dp"
                android:textColor="@color/mycolor"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shortage"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="176dp"
                android:layout_marginLeft="176dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="144dp"
                android:layout_marginRight="144dp"
                android:text="Leakage"
                android:textColor="@color/mycolor"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leakage"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="107dp"
                android:layout_marginRight="107dp"
                android:text="Acidity in Water"
                android:textColor="@color/mycolor"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="170dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="140dp"
                android:layout_marginRight="140dp"
                android:text="Pipe Burst"
                android:textColor="@color/mycolor"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/burst"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="146dp"
                android:layout_marginLeft="146dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="111dp"
                android:layout_marginRight="111dp"
                android:text="Water Shortage"
                android:textColor="@color/mycolor"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="61dp"
                android:layout_height="44dp"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/pb" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="58dp"
                android:layout_height="46dp"
                android:layout_below="@+id/shortage"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/leak" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="53dp"
                android:layout_height="48dp"
                android:layout_below="@+id/burst"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="9dp"
                app:srcCompat="@drawable/wshort" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="44dp"
                android:layout_height="58dp"
                android:layout_below="@+id/leakage"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/acid" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

