<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabbed_activity$PlaceholderFragment"
    android:background="@color/blue">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="341dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="File Your Complaint Here"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:textColor="@color/mycolor" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/section_label"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:text="pipe burst"
        android:textSize="22sp"
        android:textColor="@color/mycolor"/>

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton"
        android:layout_alignStart="@+id/section_label"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:text="Water shortage"
        android:textSize="22sp"
        android:textColor="@color/mycolor"/>

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton2"
        android:layout_alignStart="@+id/section_label"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:text="type3"
        android:textSize="22sp"
        android:textColor="@color/mycolor"/>

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton3"
        android:layout_alignStart="@+id/section_label"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="178dp"
        android:text="type4"
        android:textSize="22sp"
        android:textColor="@color/mycolor"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_label"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="25dp"
        android:text="Type of Complaint:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/mycolor"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/section_label"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="74dp"
        android:ems="10"
        android:hint="Please be specific"
        android:inputType="textPersonName"
        android:textColor="@color/mycolor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/section_label"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="126dp"
        android:text="Special Instructions"
        android:textSize="18sp"
        android:textColor="@color/mycolor"/>

    <Button
        android:id="@+id/button"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:background="@drawable/buttonbg"
        android:text="Submit"
        android:textAlignment="center"
        android:textColor="@color/mycolor"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>